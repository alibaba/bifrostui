{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2015", "DOM", "DOM.Iterable", "ESNext"],
    "module": "esnext",
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "importHelpers": true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": false,
    "resolveJsonModule": true,
    "paths": {
      "@bifrostui/react": ["./packages/bui-core/src/index.ts"],
      "@bifrostui/icons": ["./packages/bui-icons/src/index.ts"],
      "@bifrostui/types": ["./packages/bui-types/src/index.ts"],
      "@bifrostui/utils": ["./packages/bui-utils/src/index.ts"],
      "@bifrostui/styles/registry": [
        "./packages/bui-styles/registry/index.mjs"
      ],
      "testing": ["./tests"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib", "es", "dist", "typings", "websites"],
  "types": [
    "vitest/globals" // ← 新增这一行
  ]
}
