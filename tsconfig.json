{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2015", "DOM", "DOM.Iterable", "ESNext"],
    "module": "esnext",
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "importHelpers": true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": false,
    "paths": {
      "@bifrostui/react": ["./packages/bui-core/src"],
      "@bifrostui/icons": ["./packages/bui-icons/src"],
      "@bifrostui/types": ["./packages/bui-types/src"],
      "@bifrostui/utils": ["./packages/bui-utils/src"],
      "testing": ["./tests"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "docs",
    "websites"
  ]
}
