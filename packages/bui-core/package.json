{
  "name": "@bifrostui/react",
  "version": "2.0.0-beta.6",
  "description": "React components for building mobile application",
  "homepage": "http://bui.taopiaopiao.com",
  "license": "MIT",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "typings": "es/index.d.ts",
  "directories": {
    "test": "__tests__"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "module": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./css/*": "./es/*/index.css"
  },
  "files": [
    "dist",
    "es",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "main": "dist/index.js",
    "module": "es/index.js",
    "exports": {
      ".": {
        "import": "./es/index.js",
        "module": "./es/index.js",
        "require": "./dist/index.js"
      },
      "./css/*": "./es/*/index.css"
    },
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "node esbuild.config.js"
  },
  "sideEffects": [
    "*.css",
    "*.less"
  ],
  "devDependencies": {
    "esbuild-plugin-less": "1.3.10",
    "fs-extra": "^11.2.0",
    "glob": "11.0.0"
  },
  "dependencies": {
    "@bifrostui/icons": "workspace:*",
    "@bifrostui/styles": "workspace:*",
    "@bifrostui/types": "workspace:*",
    "@bifrostui/utils": "workspace:*",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.7",
    "swiper": "^8.1.5"
  },
  "peerDependencies": {
    "@tarojs/components": "^3.0.0",
    "@tarojs/taro": "^3.0.0",
    "@types/react": "^17.0.0 || ^18.0.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  }
}
